{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "noImplicitOverride": false,
    "plugins": [
      {
        "name": "@vue/typescript-plugin",
        "vueCompilerOptions": {
          "target": 4
        }
      }
    ]
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ]
}
